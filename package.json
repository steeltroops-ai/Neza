{
  "name": "neza",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Premium local services marketplace - The Uber for local services",
  "author": "Neza Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.1.34",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "bun run --filter=web dev",
    "build": "bun run build:packages && bun run --filter=web build",
    "build:packages": "bun run --filter=@neza/ui build && bun run --filter=@neza/config build",
    "start": "bun run --filter=web start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "cd apps/web && bunx tsc --noEmit --skipLibCheck",
    "test": "bun run --filter=* test",
    "test:watch": "bun run --filter=* test:watch",
    "test:coverage": "bun run --filter=* test:coverage",
    "clean": "bun run --filter=* clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,yaml,yml}\"",
    "prepare": "husky install",
    "quality:fix": "bun run lint:fix && bun run format && bun run type-check",
    "quality:check": "bun run lint && bun run format:check && bun run type-check && bun run test:coverage",
    "security:audit": "bun audit --audit-level moderate",
    "security:fix": "bun audit --fix",
    "unused:check": "bunx unimported",
    "unused:remove": "bunx ts-unused-exports tsconfig.json --excludePathsFromReport=src/app",
    "auto-fix": "bun run lint:fix && bun run format && bun run type-check",
    "dev:safe": "bun run auto-fix && bun run dev",
    "commit:safe": "bun run auto-fix && git add . && git commit",
    "db:generate": "cd infra/supabase && supabase gen types typescript --local > ../../packages/database/src/types.ts",
    "db:migrate": "cd infra/supabase && supabase db push",
    "db:reset": "cd infra/supabase && supabase db reset",
    "db:seed": "cd infra/supabase && supabase db seed",
    "postinstall": "bun run build:packages"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "typescript": "~5.5.4",
    "glob": "^10.3.0"
  },
  "dependencies": {},
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --max-warnings=10",
      "prettier --write"
    ],
    "*.{json,md,mdx,css,yaml,yml}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/steeltroops-ai/Neza.git"
  },
  "keywords": [
    "marketplace",
    "local-services",
    "nextjs",
    "typescript",
    "supabase",
    "tailwindcss",
    "framer-motion"
  ]
}
